{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "es5",
    "module": "commonjs",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
